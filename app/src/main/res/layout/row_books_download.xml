<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/curve_solid_white"
    android:layout_margin="5dp"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.ias.gsscore.utils.CustomTextView
            android:id="@+id/tvName"
            style="@style/Poppins_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="1"
            android:textColor="@color/text_color_333333"
            android:textSize="14sp"
            android:padding="3dp"
            android:text="Gist Of Report : Global Nutrition Report" />

        <LinearLayout
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/curve_blue_stroke"
            android:gravity="center"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_course_brochure"
                android:layout_marginStart="5dp"
                app:tint="@color/blue_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="Download PDF"
                android:layout_marginEnd="5dp"
                android:textColor="@color/blue_text"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>