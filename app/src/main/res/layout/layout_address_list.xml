<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=""/>

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="8dp"
                android:layout_toEndOf="@+id/layoutRadio"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ias.gsscore.utils.CustomTextView
                        android:id="@+id/tvName"
                        style="@style/Poppins_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Suraj Dubey"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.ias.gsscore.utils.CustomTextView
                        android:id="@+id/tvDefaultAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="(Default)"
                        android:textColor="@color/grey_text"
                        android:textSize="12sp" />


                </LinearLayout>

                <com.ias.gsscore.utils.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="1688, sector 55, faridabad, haryana, pincode -121005"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <com.ias.gsscore.utils.CustomTextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="Karol Bagh"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp" />

                <com.ias.gsscore.utils.CustomTextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="Delhi, 110015"
                    android:textColor="@color/grey_text"
                    android:textSize="14sp" />

                <com.ias.gsscore.utils.CustomTextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="Mobile: 9560100995"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <com.ias.gsscore.utils.CustomTextView
                android:id="@+id/btEditAddress"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/curve_blue_stroke"
                android:gravity="center"
                android:text="Edit Address"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.ias.gsscore.utils.CustomTextView
                android:id="@+id/btRemove"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/curve_blue_stroke"
                android:gravity="center"
                android:text="Remove "
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>



    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>