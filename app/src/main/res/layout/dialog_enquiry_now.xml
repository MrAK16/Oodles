<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.ias.gsscore.utils.CustomTextView
                        style="@style/Poppins_SemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:text="Enquiry Now"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <com.ias.gsscore.utils.CustomTextView
                            style="@style/Poppins_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/curve_grey_stroke_dark"
                            android:hint="Enter name"
                            android:paddingLeft="10dp"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomTextView
                            style="@style/Poppins_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/curve_grey_stroke_dark"
                            android:hint="Enter email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/white"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomTextView
                            style="@style/Poppins_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:text="Mobile"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomEditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/curve_grey_stroke_dark"
                            android:hint="Enter name"
                            android:inputType="number"
                            android:textColorHint="@color/white"
                            android:maxLength="10"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomTextView
                            style="@style/Poppins_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:text="State"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/curve_grey_stroke_dark"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginHorizontal="16dp">

                            <Spinner
                                android:id="@+id/etState"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:spinnerMode="dropdown"/>

                        </LinearLayout>

                        <com.ias.gsscore.utils.CustomTextView
                            style="@style/Poppins_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="8dp"
                            android:text="Message"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.ias.gsscore.utils.CustomEditText
                            android:id="@+id/etMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/curve_grey_stroke_dark"
                            android:hint="Enter message"
                            android:textColorHint="@color/white"
                            android:minHeight="50dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/no"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/curve_blue_solid"
                            android:backgroundTint="@color/red"
                            android:gravity="center"
                            android:padding="8dp">

                            <com.ias.gsscore.utils.CustomTextView
                                style="@style/Poppins_SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/yes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/curve_blue_solid"
                            android:backgroundTint="@color/green"
                            android:gravity="center"
                            android:padding="8dp">

                            <com.ias.gsscore.utils.CustomTextView
                                style="@style/Poppins_SemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Submit"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>